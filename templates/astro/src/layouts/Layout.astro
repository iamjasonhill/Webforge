---
import SEO from '../components/SEO.astro';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/500.css';
import '@fontsource/roboto/700.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
}

const { title, description, image, type, noindex } = Astro.props;
---

<SEO 
  title={title} 
  description={description} 
  image={image} 
  type={type} 
  noindex={noindex}
>
  <div class="font-sans antialiased text-slate-800 bg-slate-50 min-h-screen flex flex-col">
    <slot name="header" />
    <main class="flex-grow">
      <slot />
    </main>
    <slot name="footer" />
  </div>
</SEO>
